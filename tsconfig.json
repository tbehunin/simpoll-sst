{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "paths": {
      "@simpoll-sst/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
